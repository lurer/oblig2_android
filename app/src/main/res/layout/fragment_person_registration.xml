<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_style"
    tools:context="com.example.s198599.s198599_mappe2.fragments.PersonRegistrationFragment">

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:rowCount="11">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_first_name"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="30dp"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_first_name"
            android:id="@+id/lbl_first_name"
            android:layout_row="1"
            android:layout_column="0"
            />


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_last_name"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingTop="30dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_last_name"
            android:id="@+id/lbl_last_name"
            android:layout_row="3"
            android:layout_column="0"
            />


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_phone_number"
            android:layout_row="4"
            android:layout_column="0"
            android:paddingTop="30dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_phone_number"
            android:id="@+id/lbl_phone_number"
            android:layout_row="5"
            android:layout_column="0"
            />




    </GridLayout>

</RelativeLayout>
