<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_style"
    tools:context="com.example.s198599.s198599_mappe2.fragments.PersonRegistrationFragment">

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:columnCount="1"
        android:rowCount="11">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_first_name"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="30dp"
            android:gravity="center"
            android:textColor="@color/text_color"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_first_name"
            android:id="@+id/lbl_first_name"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:textColor="@color/text_color_alt"
            android:textSize="10dp"
            />


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_last_name"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingTop="30dp"
            android:gravity="center"
            android:textColor="@color/text_color"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_last_name"
            android:id="@+id/lbl_last_name"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center"
            android:textColor="@color/text_color_alt"
            android:textSize="10dp"
            />


        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_phone_number"
            android:layout_row="4"
            android:layout_column="0"
            android:paddingTop="30dp"
            android:gravity="center"
            android:textColor="@color/text_color"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_phone_number"
            android:id="@+id/lbl_phone_number"
            android:layout_row="5"
            android:layout_column="0"
            android:gravity="center"
            android:textColor="@color/text_color_alt"
            android:textSize="10dp"
            />

        <Button
            android:id="@+id/open_date_picker"
            style="@style/small_button_style"
            android:width="200dp"
            android:text="@string/btn_open_date_picker"
            android:layout_row="6"
            android:layout_column="0"
            android:gravity="center"
            android:layout_marginTop="30dp"/>


    </GridLayout>

</RelativeLayout>
