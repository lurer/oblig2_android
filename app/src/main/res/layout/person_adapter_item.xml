<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/person_item_checkbox"
        android:clickable="true"
        android:focusable="false"
        android:buttonTint="@color/text_color"
        android:layout_centerVertical="true"
        android:focusableInTouchMode="false"
        android:textColor="@color/text_color"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_item_icon"
        android:background="@drawable/person_icon_blue"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/person_item_checkbox"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/person_item_icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/person_item_firstname"
            android:textColor="@color/text_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:id="@+id/person_item_lastname"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/person_item_firstname"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_item_phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/person_item_firstname"
            android:textColor="@color/text_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_item_date"
            android:layout_toRightOf="@+id/person_item_phone"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_color"/>
    </RelativeLayout>

    
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/person_item_details"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_action_blue"/>

</RelativeLayout>